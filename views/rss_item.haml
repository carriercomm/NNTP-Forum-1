-# encoding: utf-8
%item
	%title= item[:subject]
	%pubDate= item[:date].rfc2822
	%link
		http#{@env['HTTPS']?'s':''}://#{@env['HTTP_HOST']}/#{@env['config']['subdirectory']+'/' if @env['config']['subdirectory'].to_s !~ /\/*/}thread/#{item[:message_id][1..-2]}
	%guid(isPermaLink="false")= item[:message_id]
	%author= item[:from]
	%description= item[:body]
